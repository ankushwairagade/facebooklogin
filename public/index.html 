<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <title>WhatsApp Embedded Signup</title>
  <style>
    #loginBtn:disabled { opacity:0.6; cursor:not-allowed; }
    #status { margin-top:1em; white-space:pre-wrap; font-family:monospace; }
  </style>
</head>
<body>
  <button id="loginBtn">Login & Fetch Details</button>
  <div id="status"></div>

  <script async defer src="https://connect.facebook.net/en_US/sdk.js"></script>
  <script>
    const API_BASE = '/api';
    const statusEl = document.getElementById('status');
    let phoneNumberId;
    const log = msg => statusEl.textContent += msg + '\n';

    window.fbAsyncInit = () => {
      FB.init({ appId: 'YOUR_FB_APP_ID', version: 'v22.0' });
      log('FB SDK initialized');
    };

    window.addEventListener('message', ({ origin, data }) => {
      if (!['https://www.facebook.com','https://web.facebook.com'].includes(origin)) return;
      try {
        const { type, data: d } = JSON.parse(data);
        if (type === 'WA_EMBEDDED_SIGNUP') phoneNumberId = d.phone_number_id;
      } catch {}
    });

    document.getElementById('loginBtn').onclick = () => {
      log('Starting login...');
      FB.login(resp => {
        if (!resp.authResponse || !phoneNumberId) return log('Login error');
        const { code } = resp.authResponse;
        log(`Auth code: ${code}`);
        fetch(`${API_BASE}/exchange_code`, {
          method:'POST', headers:{'Content-Type':'application/json'},
          body:JSON.stringify({ code, phone_number_id: phoneNumberId })
        })
        .then(r => r.json().then(d => ({ status:r.status, data:d })))
        .then(({status,data}) => {
          if (status!==200) return log('Error: '+ data.error);
          log('Fetched details: ' + JSON.stringify(data));
        });
      }, { config_id:'YOUR_CONFIG_ID', response_type:'code', override_default_response_type:true });
    };
  </script>
</body>
</html>